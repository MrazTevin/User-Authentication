
type UserResponseDTO {
    id: ID
    email: String
    isVerified: Boolean
    createdAt: String
    message: String!
}
input UserInputDTO {
    email: String!
    password: String!
}

type Query {
    getUserById(id: ID!): UserResponseDTO
}

type OTPVerificationResult {
    success: Boolean!
    message: String!
}
type Mutation {
    registerUser(inputDTO: UserInputDTO): UserResponseDTO
    verifyOTP(email: String!, otp: String!): OTPVerificationResult!
}

